/* pages/accept/accept.wxss */

.tips {
  background: #5ac2d9;
  border-radius: 5px;
  padding: 5px;
  color: white;
  font-size: 20px;
  line-height: 35px;
  margin-top: 30px;
  margin-left: 20px;
  margin-right: 20px;
}

.acceptButtonArea button {
  margin-top: 200px;
  width: 200px;
  height: 200px;
  border-radius: 200px;
  background: #3bb788;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40px;
}

/* 按钮点击态 */

.acceptButtonClicked {
  background: #32a076;
  transform: scale(0.9, 0.9);
}
